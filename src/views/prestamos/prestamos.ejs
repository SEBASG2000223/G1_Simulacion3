<!doctype html>
<html lang="en">

<!-- Incluir head -->
<%- include('../layout/head') %>

<body class="min-vh-100 d-flex flex-column">

    <!--  Body wrapper -->
    <div class="page-wrapper flex-grow-1 d-flex" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
        data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">

        <!-- Incluir sidebar -->
        <%- include('../layout/sidebar') %>

        <!-- Body -->
        <div class="body-wrapper flex-grow-1 d-flex align-items-center">
            <div class="container">
                <div class="table-wrapper">
                    <div class="table-title mb-4">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Gestión de Préstamos</h2>
                            </div>
                            <div class="col-sm-6 d-flex justify-content-end">
                                <a href="/prestamos/agregarPrestamo"
                                    class="btn btn-primary btn-sm d-flex align-items-center justify-content-center">
                                    <i class="fa fa-plus mr-1"></i> Agregar Préstamo
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <table class="table table-striped table-hover" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Libro</th>
                                    <th>Usuario</th>
                                    <th>Fecha de Préstamo</th>
                                    <th>Fecha de Devolución</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% prestamos.forEach(function(prestamo) { %>
                                    <tr>
                                        <td>
                                            <%= prestamo.libro.titulo %>
                                          </td>
                                         
                                        <td>
                                            <% if (prestamo.usuario) { %> 
                                              <%= prestamo.usuario.nombre %> 
                                            <% } else { %>
                                              Usuario no disponible
                                            <% } %>
                                          </td>
                                        <td>
                                            <%= prestamo.fechaPrestamo.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= prestamo.fechaDevolucion ? prestamo.fechaDevolucion.toLocaleDateString() : 'Pendiente' %>
                                        </td>
                                        <td>
                                            <%= prestamo.estado %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Incluir scripts de js -->
        <%- include('../layout/scripts') %>
    </div>
</body>

</html>
