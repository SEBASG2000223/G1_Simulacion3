<!doctype html>
<html lang="en">

<!-- Incluir head -->
<%- include('../layout/head') %>

    <body class="min-vh-100 d-flex flex-column">

        <!--  Body wrapper -->
        <div class="page-wrapper flex-grow-1 d-flex" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
            data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">

            <!-- Incluir sidebar -->
            <%- include('../layout/sidebar') %>

                <!-- Body -->
                <div class="body-wrapper flex-grow-1 d-flex align-items-center">
                    <div class="container">
                        <div class="table-wrapper">
                            <div class="table-title mb-4">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>Gestión de Usuarios</h2>
                                    </div>
                                    <div class="col-sm-6 d-flex justify-content-end">
                                        <a href="/usuarios/agregarUsuario"
                                            class="btn btn-primary btn-sm d-flex align-items-center justify-content-center">
                                            <i class="fa fa-plus mr-1"></i> Agregar Usuario
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <table class="table table-striped table-hover" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>Cédula</th>
                                            <th>Nombre</th>
                                            <th>Correo</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% usuarios.forEach(function(usuario) { %>
                                            <tr>
                                                <td>
                                                    <%= usuario.cedula %>
                                                </td>
                                                <td>
                                                    <%= usuario.nombre %>
                                                </td>
                                                <td>
                                                    <%= usuario.correo %>
                                                </td>
                                                <td>
                                                    <a href="/usuarios/editarUsuario/<%= usuario._id %>" class="btn btn-primary btn-sm mr-2">Editar</a>

                                                    <form action="/usuarios/<%= usuario._id %>?_method=DELETE"
                                                        method="POST" style="display: inline;">
                                                        <button class="btn btn-danger btn-sm mr-2 type="submit">Eliminar</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Incluir scripts de js -->
                <%- include('../layout/scripts') %>
        </div>
    </body>

</html>